<solverBenchmarkSuite>
    <benchmarkDirectory>local/data/tournaments</benchmarkDirectory>
    <inheritedSolverBenchmark>
        <unsolvedSolutionFile>src/main/resources/input-tiny.xml</unsolvedSolutionFile>
        <unsolvedSolutionFile>src/main/resources/input-large.xml</unsolvedSolutionFile>
        <unsolvedSolutionFile>src/main/resources/input-monster.xml</unsolvedSolutionFile>
        <localSearchSolver>
			    <scoreDrl>/scoreRules.drl</scoreDrl>
			    <scoreDefinition>
			        <scoreDefinitionType>HARD_AND_SOFT</scoreDefinitionType>
			    </scoreDefinition>
			    <termination>
			        <terminationCompositionStyle>OR</terminationCompositionStyle>
			        <maximumMinutesSpend>1</maximumMinutesSpend>
			        <scoreAttained>0hard/0soft</scoreAttained>
			    </termination> 
			    <acceptor>
			      <simulatedAnnealingStartingTemperature>0hard/20soft</simulatedAnnealingStartingTemperature>
			    </acceptor>
			    <forager>
			        <minimalAcceptedSelection>4</minimalAcceptedSelection>
			    </forager>    
			    <selector>
			      <selector>
			          <moveFactoryClass>org.drools.planner.examples.tournaments.move.factory.FillSlotMoveFactory</moveFactoryClass>
			      </selector>
			      <selector>
			          <moveFactoryClass>org.drools.planner.examples.tournaments.move.factory.SwitchSlotMoveFactory</moveFactoryClass>
			      </selector>
			    </selector>
			    <startingSolutionInitializerClass>org.drools.planner.examples.tournaments.SolutionInitializer</startingSolutionInitializerClass>
        </localSearchSolver>
    </inheritedSolverBenchmark>

    <solverBenchmark>
        <name>Solution tabu 1000</name>
        <localSearchSolver>
            <acceptor>
            <completeSolutionTabuSize>1000</completeSolutionTabuSize>
            </acceptor>
        </localSearchSolver>
    </solverBenchmark>
    <solverBenchmark>
        <name>Solution tabu 10000</name>
        <localSearchSolver>
            <acceptor>
            <completeSolutionTabuSize>10000</completeSolutionTabuSize>
            </acceptor>
        </localSearchSolver>
    </solverBenchmark>
    <solverBenchmark>
        <name>Solution tabu 100000</name>
        <localSearchSolver>
            <acceptor>
            <completeSolutionTabuSize>100000</completeSolutionTabuSize>
            </acceptor>
        </localSearchSolver>
    </solverBenchmark>
</solverBenchmarkSuite>