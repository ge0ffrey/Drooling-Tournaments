<?xml version="1.0" encoding="UTF-8"?>
<solverBenchmarkSuite>
  <benchmarkDirectory>data/benchmark/</benchmarkDirectory>
  <solverStatisticType>BEST_SOLUTION_CHANGED</solverStatisticType>
  <warmUpSecondsSpend>30</warmUpSecondsSpend>
  <inheritedSolverBenchmark>
    <!-- unsolvedSolutionFile>src/main/resources/input-my.xml</unsolvedSolutionFile-->
    <unsolvedSolutionFile>src/main/resources/input-my-mid.xml</unsolvedSolutionFile>
    <!--unsolvedSolutionFile>src/main/resources/input-large.xml</unsolvedSolutionFile>
    <unsolvedSolutionFile>src/main/resources/input-monster.xml</unsolvedSolutionFile-->
    <solver>
	    <solutionClass>org.drools.planner.examples.tournaments.TournamentsSolution</solutionClass>
	    <planningEntityClass>org.drools.planner.examples.tournaments.model.Slot</planningEntityClass>
	    <scoreDrl>/scoreRules.drl</scoreDrl>
	    <scoreDefinition>
	        <scoreDefinitionType>HARD_AND_SOFT</scoreDefinitionType>
	    </scoreDefinition>
	    <constructionHeuristic>
	        <constructionHeuristicType>FIRST_FIT</constructionHeuristicType>
            <constructionHeuristicPickEarlyType>FIRST_LAST_STEP_SCORE_EQUAL_OR_IMPROVING</constructionHeuristicPickEarlyType>
	    </constructionHeuristic>
        <termination>
            <terminationCompositionStyle>OR</terminationCompositionStyle>
            <maximumMinutesSpend>1</maximumMinutesSpend>
            <scoreAttained>0hard/0soft</scoreAttained>
        </termination> 
    </solver>
  </inheritedSolverBenchmark>

  <solverBenchmark>
    <name>Accept 100 soft, minimalAcceptSolution 64</name>
    <solver>
    <localSearch>
      <termination>
          <terminationCompositionStyle>OR</terminationCompositionStyle>
          <maximumUnimprovedStepCount>50</maximumUnimprovedStepCount>
          <scoreAttained>0hard/0soft</scoreAttained>
      </termination> 
      <acceptor>
         <simulatedAnnealingStartingTemperature>1hard/100soft</simulatedAnnealingStartingTemperature>
      </acceptor>
      <forager>
         <minimalAcceptedSelection>4</minimalAcceptedSelection>
      </forager>    
      <selector>
         <selector>
             <moveFactoryClass>org.drools.planner.examples.tournaments.move.factory.FillSlotMoveFactory</moveFactoryClass>
         </selector>
           <selector>
             <moveFactoryClass>org.drools.planner.examples.tournaments.move.factory.SwitchSlotMoveFactory</moveFactoryClass>
           </selector>
      </selector>
    </localSearch>
    </solver>
  </solverBenchmark>
</solverBenchmarkSuite>